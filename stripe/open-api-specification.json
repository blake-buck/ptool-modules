                                        },
                                        "has_more":{
                                            "type":"boolean"
                                        },
                                        "url":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400":{
                        "$ref":"#/components/responses/StripeError"
                    },
                    "500":{
                        "$ref":"#/components/responses/StripeError"
                    }
